<section id="contact class" class="container content-section text-center">
  <div class="container-fluid">
    <div class="col-md-3"></div>
      <div class="col-md-6">
        <h1><%= collection.name %></h1>
        <div class="add-new-video">
          <% if(locals.isAuthenticated) { %>
            <a href="/users/<%= user.id %>/collections/<%= collection.id %>/edit">(Edit Collection)</a>
          <% } %>
        </div>
        <div class="add-new-video">
          <% if(locals.isAuthenticated) { %>
          <a href="/users/<%= user.id %>/collections/<%= collection.id %>/videos/new">Add new video</a>
          <% } %>
        </div>
        <div class="add-new-video">
          <% if(locals.isAuthenticated) { %>
          <a class="button" href="/users/<%= user.id %>/collections">Back</a>
          <% } %>
        </div>
        <div>
          <% collection.videos.forEach((video) => { %>
            <div class="video-list">
              <a href="/users/<%= user.id %>/collections/<%= collection.id %>/videos/<%= video.id %>">
                <h2><%= video.name %></h2>
              </a>
              <div class"image">
                <img src="<%=video.thumbnailUrl%>">
              </div>
                <p><%= video.description %></p>
            </div>
          <% }) %>
        </div>
        <div class="add-new-video">
          <% if(locals.isAuthenticated) { %>
          <a href="/users/<%= user.id %>/collections/<%= collection.id %>/videos/new">Add new video</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</section>
