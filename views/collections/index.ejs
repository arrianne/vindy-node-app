<section id="contact class" class="container content-section text-center">
  <div class="container-fluid">
    <div class="bg">
      <div class="col-md-3"></div>
      <div class="col-md-6">
       <h1>YOUR COLLECTIONS</h1>
       <div class="new-collection">
        <% if(locals.isAuthenticated) { %>
         <form method="POST" action="/users/<%= user.id %>/collections">
           <div class="form-group">
             <label for="name"></label>
             <input type="text" name="name" id="name" placeholder="Start new collection!">
           </div>
           <button class="button">Submit</button>
         </form>
        <% } %>
        <% collections.forEach((collection) => { %>
          <div>
            <a href="/users/<%= user.id %>/collections/<%= collection.id %>">
              <div class="collection-name">
              <h2><%= collection.name %></h2>
              </div>
            </a>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</section>
