<section id="contact class" class="container content-section text-center">
  <div class="container-fluid">
    <div class="bg">
      <div class="col-md-3"></div>
        <div class="col-md-6">
          <h1>New Video</h1>
          <form id="search">
            <label></label>
            <input type="text" name="q">
            <button id="search" class="button">Search Youtube</button>
          </form>
          <form method="POST" action="/users/<%= user.id %>/collections/<%= collection.id %>/videos">
              <div class="form-group">
                <label for="name"></label>
                <input type="text" placeholder="Name" name="name" id="name">
              </div>
              <div class="form-group">
                <input type="hidden" name="youtubeId" id="youtubeId">
                <input type="hidden" name="thumbnailUrl" id="thumbnailUrl">
              </div>
              <div class="form-group">
                <label for="description"></label>
                <input type="text" placeholder="Video Description" name="description" id="description">
              </div>
              <button class="button">Submit</button>
          </form>
        </div>
      </div>
      <div class="col-md-12"></div>
        <div class="col-md-12">
          <div class="results"></div>
        </div>
      </div>
    </div>
  </div>
</section>
