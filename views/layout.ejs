<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vindy</title>
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oleo+Script" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Abel" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:700" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="/js/app.js" charset="utf-8"></script>
    <script src="https://apis.google.com/js/client.js?onload=gapiReady"></script>
 </head>
  <body>
    <ul class="nav nav-pills">
      <li role="presentation"><a href="/users">Video collectors</a></li>
      <% if(locals.isAuthenticated) { %>
          <li role="presentation"><a href="/logout">Logout</a></li>
          <li role="presentation"><a href="/users/<%= user.id %>/collections">Manage collections</a></li>
          <li role="presentation"><a href="/users/<%= user.id %>">Profile</a></li>
      <% } else { %>
          <li role="presentation"><a  href="/login">Login</a></li>
          <li role="presentation"><a  href="/register">Register</a></li>
      <% } %>
    </ul>
    <% for(const type in messages) { %>
      <div class="<%= type %>">
        <h5><%= messages[type] %></h5>
      </div>
    <% } %>
    <main class="container">
      <%- body %>
    </main>
    <footer></footer
  </body>
</html>
